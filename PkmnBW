    <div id="modal-regras" class="hidden fixed inset-0 bg-slate-900/95 flex items-center justify-center p-6 z-[100]">
        <div class="bg-white rounded-[2rem] max-w-md w-full p-8 shadow-2xl relative">
            <h2 class="text-2xl font-black mb-6 text-slate-900 leading-tight">INSTRU√á√ïES DO CLUBE</h2>
            <div class="space-y-4 text-sm text-slate-600">
                <p class="flex gap-3"><i data-lucide="calendar" class="text-red-500 w-8"></i> <strong>Prazo:</strong> 23/02 a 01/03 (At√© ao 1¬∫ Gin√°sio).</p>
                <p class="flex gap-3"><i data-lucide="eye-off" class="text-red-500 w-8"></i> <strong>Spoilers:</strong> Proibido antecipar eventos futuros!</p>
                <p class="flex gap-3"><i data-lucide="refresh-cw" class="text-red-500 w-8"></i> <strong>Trocas:</strong> Apenas via GTS entre o grupo e com pok√©mon da √°rea.</p>
                <p class="flex gap-3"><i data-lucide="zap-off" class="text-red-500 w-8"></i> <strong>Mods:</strong> Apenas vers√µes originais (Black/White).</p>
            </div>
            <button onclick="toggleModal('modal-regras')" class="mt-8 w-full bg-slate-900 text-white py-4 rounded-2xl font-black tracking-widest uppercase">Entendido!</button>
        </div>
    </div>

    <script>
        // CONFIGURA√á√ÉO FIREBASE
        const firebaseConfig = { databaseURL: "https://clube-pokemon-default-rtdb.firebaseio.com/" };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        lucide.createIcons();

        const pokesDisponiveis = ["Patrat", "Lillipup", "Purrloin", "Pansage", "Pansear", "Panpour", "Munna", "Roggenrola", "Woobat", "Audino"];
        let capturados = [];
        let team = [];

        // Iniciar Pok√©dex
        const dexGrid = document.getElementById('pokedex-grid');
        pokesDisponiveis.forEach(pk => {
            dexGrid.innerHTML += `
                <label class="flex items-center gap-2 border p-2 rounded-xl cursor-pointer hover:bg-slate-50 transition text-xs font-medium">
                    <input type="checkbox" onchange="updateDex(this)" value="${pk}" class="w-4 h-4 rounded border-slate-300"> ${pk}
                </label>
            `;
        });

        function changeTab(tab) {
            document.getElementById('content-perfil').classList.toggle('hidden', tab !== 'perfil');
            document.getElementById('content-pokedex').classList.toggle('hidden', tab !== 'pokedex');
            document.getElementById('tab-perfil').classList.toggle('tab-active', tab === 'perfil');
            document.getElementById('tab-pokedex').classList.toggle('tab-active', tab === 'pokedex');
        }

        function updateDex(el) {
            if(el.checked) capturados.push(el.value);
            else {
                capturados = capturados.filter(p => p !== el.value);
                team = team.filter(t => t.species !== el.value);
            }
            renderTeamInputs();
        }

        function renderTeamInputs() {
            const container = document.getElementById('team-list');
            container.innerHTML = "";
            
            // Adicionar Inicial sempre
            const inicial = document.getElementById('inicial').value;
            if(!team.find(t => t.species === inicial)) team.push({species: inicial, level: 5});

            capturados.forEach(pk => {
                if(!team.find(t => t.species === pk)) team.push({species: pk, level: 1});
            });

            team.slice(0, 6).forEach((member, index) => {
                container.innerHTML += `
                    <div class="flex items-center justify-between bg-slate-50 p-3 rounded-xl border border-slate-100">
                        <span class="text-xs font-bold">${member.species}</span>
                        <div class="flex items-center gap-2">
                            <span class="text-[9px] uppercase font-bold text-slate-400">Lv.</span>
                            <input type="number" value="${member.level}" onchange="team[${index}].level = this.value" class="w-12 p-1 rounded border text-center text-xs">
                        </div>
                    </div>
                `;
            });
        }

        function toggleModal(id) { document.getElementById(id).classList.toggle('hidden'); }

        function salvarTudo() {
            const nome = document.getElementById('nome').value.trim();
            if(!nome) return alert("Escreva o seu nome!");

            const btn = document.getElementById('btn-final');
            btn.innerText = "A GUARDAR...";
            
            db.ref('jogadores/' + nome).set({
                nome,
                versao: document.getElementById('versao').value,
                inicial: document.getElementById('inicial').value,
                progresso: document.getElementById('progresso').value,
                capturados,
                team: team.slice(0, 6),
                updateAt: Date.now()
            }).then(() => {
                btn.innerText = "SALVAR JORNADA NO GRUPO";
                alert("Dados sincronizados com o grupo!");
                changeTab('perfil');
            });
        }

        // LER DADOS DO GRUPO
        db.ref('jogadores').on('value', (snap) => {
            const listIds = ['list-nuvema', 'list-rotas', 'list-ginasio'];
            listIds.forEach(id => document.getElementById(id).innerHTML = "");

            const data = snap.val();
            if(data) {
                Object.values(data).forEach(p => {
                    const color = p.versao === 'Black' ? 'bg-slate-900' : 'bg-white border-2 border-slate-200 text-slate-900';
                    const html = `
                        <div class="group relative">
                            <div class="w-8 h-8 rounded-full ${color} text-[9px] flex items-center justify-center font-black shadow-sm cursor-pointer">
                                ${p.nome.substring(0,2).toUpperCase()}
                            </div>
                            <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 scale-0 group-hover:scale-100 transition-all z-50">
                                <div class="bg-slate-900 text-white text-[10px] p-3 rounded-xl shadow-2xl min-w-[120px]">
                                    <p class="font-bold border-b border-slate-700 pb-1 mb-1 text-red-500">${p.nome}</p>
                                    <p>Dex: ${p.capturados ? p.capturados.length : 0} pokes</p>
                                    <p class="mt-1 text-slate-400">Time: ${p.team ? p.team.map(t => t.species).join(', ') : ''}</p>
                                </div>
                            </div>
                        </div>
                    `;
                    document.getElementById('list-' + p.progresso).innerHTML += html;
                });
            }
        });
    </script>
</body>
