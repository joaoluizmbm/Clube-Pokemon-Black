        <section class="bg-white rounded-3xl shadow-xl overflow-hidden border border-slate-200">
            <div class="bg-slate-50 border-b p-4 flex justify-around">
                <button onclick="changeTab('perfil')" id="tab-perfil" class="text-xs font-bold uppercase pb-1 tab-active">1. Perfil</button>
                <button onclick="changeTab('pokedex')" id="tab-pokedex" class="text-xs font-bold uppercase pb-1 text-slate-400">2. Dex/Time</button>
